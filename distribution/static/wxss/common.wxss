/* 表单 */
.com-form-box .com-box{margin: 20rpx 20rpx 0;background: #fff;border-radius: 10rpx;}
.com-form-box .com-box .form-item:last-child{border: 0;}
.com-form-box .form-title{width: 200rpx;padding-left:30rpx;font-weight: 600;box-sizing:border-box;color: #333;}
.com-form-box .img-box{width: 60rpx;text-align: right;padding-right: 30rpx;box-sizing: border-box;}
.com-form-box .form-item{height: 120rpx;font-size: 30rpx;border-bottom: 1rpx solid #eee;}
.com-form-box .part-title{font-size: 26rpx;color: #666;margin: 0 20rpx;padding: 40rpx 30rpx 30rpx;line-height: 1;}
.com-form-box .padding-box{padding: 10rpx;}
.bottom-single-btn{background: #f8b616}
.com-new-gold-font{color: #fdb813}
/* 三角上下 */
.com-tri-icon{width: 20rpx;height: 11rpx;}
/* 默认标签 */
.com-default-tip{width: 80rpx;height: 30rpx;line-height:30rpx;text-align:center;font-size: 24rpx;border-radius:5rpx;border:1rpx solid #f8b616;color: #f8b616;}
/* 圆边按钮 */
.com-bottom-capsule-btn{position: fixed;bottom: 20rpx;width:690rpx;background: #f8b616;border-radius: 100rpx;height: 100rpx;left: 0;right: 0;margin: auto;display: flex;align-items: center;overflow: hidden;}
.com-bottom-capsule-btn button{padding: 0;margin: 0;line-height: 100rpx;background: #f8b616;color: #fff;font-size: 34rpx;flex:1;} 
.com-bottom-capsule-btn .white-line{width: 2rpx;height: 30rpx;background: #fff; }
/* 公用paddingbox */
.com-padding-box{padding-left: 30rpx;padding-right: 30rpx;}
.com-margin-box{margin: 20rpx 20rpx 0;border-radius: 10rpx;background: #fff;}
/* 库区标签 */
.com-tag{padding: 0 15rpx;background: #ffa515;color: #fff;margin-left: 20rpx;border-radius: 5rpx;font-size: 24rpx;height: 40rpx;line-height: 40rpx;display: inline-block;}
.com-scroll-view-style{overflow: hidden;white-space: nowrap;}
/* 搜索 */
.com-search-box .search-padding-box{padding: 20rpx 20rpx 0;}
.com-search-box .search-input-box{border-radius:10rpx;background: #fff;height: 100rpx;flex: 1;font-size: 28rpx;}
.com-search-box .search-img{width: 30rpx;height: 30rpx;}
.com-search-box .search-btn{width: 120rpx;padding: 0;}

/* 公用嵌入头部 */
.com-embed-header{margin-bottom:100rpx;background: #f8b616;color: #fff;position: relative;height: 210rpx;padding: 0 30rpx;box-sizing:border-box;}
.com-embed-inner{position: absolute;background: #fff;border-radius: 10rpx;bottom: -80rpx;left: 0;right: 0;margin: auto;width: 710rpx;color: #333;padding: 0 30rpx;box-sizing: border-box;}
/* 底部按钮 */
.com-half-btn-box{height: 120rpx;display: flex;padding: 0 50rpx;align-items: center;justify-content:space-between;background: #fff;position: fixed;bottom: 0;width: 100%;box-sizing: border-box;z-index: 9;}
.com-half-btn-box .chb-sure-btn{height: 80rpx;max-width: 425rpx;flex:1;background: #f8b616;text-align: center;line-height: 80rpx;border-radius: 80rpx;font-size: 30rpx;color: #fff;}
.com-half-btn-box .chb-msg-box{font-size: 28rpx;padding-right: 5rpx;}
/* 弹框按钮 */
.com-layer-sigle-btn{}
.com-layer-cancel-btn{margin: 0;padding: 0;width: 250rpx;border:1rpx solid #999!important;border-radius: 10rpx;background: #fff!important;color: #999;height: 80rpx;line-height: 80rpx;font-size: 30rpx;}
.com-layer-sure-btn{color:#fff;width: 250rpx;border-radius: 10rpx;background: #f8b616;margin: 0;padding: 0;height: 80rpx;line-height: 80rpx;font-size: 30rpx;}