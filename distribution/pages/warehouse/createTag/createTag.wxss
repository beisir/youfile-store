}
.tip {
  width: 26rpx;
  height: 36rpx;
  border-radius: 4rpx;
  background: #ccaa77;
  position: relative;
}

.tip::after {
  content: "";
  position: absolute;
  left: 0;
  bottom: 0;
  width: 0;
  height: 0;
  border-width: 13rpx;
  border-style: solid;
  border-color: transparent transparent #fff transparent;
}
