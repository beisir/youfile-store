.tag-ser-box{
  height: 100rpx;
  padding-left: 30rpx;
}
.border-line{margin-left: 100rpx;border-top: 1rpx solid #f7f7f7;}
.ball-box{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap
}
.ball {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  
  margin: 60rpx 25rpx;
  position: relative;
}
.active:after{
    content: '';
    position: absolute;
    width: 20rpx;
    height: 40rpx;
    color: #fff;
    border-bottom: 2px solid;
    border-right: 2px solid;
    left: 50%;
    top: 25rpx;
    transform-origin: center;
    transform: translate(-50%, -30%) rotate(45deg);
    -webkit-transform: translate(-50%, -30%) rotate(45deg);}

.new-tag {
  padding: 30rpx 0 0;
}

