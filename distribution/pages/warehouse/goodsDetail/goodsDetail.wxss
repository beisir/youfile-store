@import "/distribution/static/template/goodNum/goodsNumItem";
@import "/distribution/static/wxss/common";

.header-goods{background: #fff;border-radius: 10rpx;margin: 20rpx 20rpx 0;}
.template .goods-item{display: flex;height: auto;min-height: 200rpx;}
.house-tip{height: 40rpx;line-height:40rpx;padding:0 15rpx;border-radius: 40rpx;background: #000;color: #fff;margin:0 20rpx 20rpx 0;}
.house-tip-box{flex-wrap: wrap;}

.num-item{height: 160rpx;display: flex;align-items: center;justify-content: center;flex: 1;flex-direction: column;}
/* 主体 */
.main-box{background: #fff;border-radius: 10rpx;margin: 20rpx 0;}
.tab-box{display: flex;align-items: center;justify-content: space-around;border-bottom: 1rpx solid #f0f0f0;background: #fff;}
.tab-item{width:190rpx;height: 100rpx;display: flex;align-items: center;justify-content: center;border-bottom: 5rpx solid #fff;font-size: 28rpx;}
.tab-item-ac{color: #f8b616;border-color: #f8b616;}
.gray-line{width: 2rpx;height: 30rpx;background: #eee;}
/* 仓库 */
.house-item{border-radius: 10rpx;padding: 0 30rpx 30rpx;}
.house-title{height: 80rpx;}
.house-name{padding:0 20rpx;}
.color-chunk{width: 10rpx;height: 20rpx;background: #f8b616;}
.sku-item{background: #fafafa;padding: 30rpx 0;border-radius: 10rpx;}
.sku-main{display: flex;align-items: center;justify-content: center;width: 190rpx;flex-direction: column;}
.sku-other-name{max-width: 200rpx;}
.edit-icon{padding: 0 40rpx}
/* 筛选器 */
.filter-box{width: 100%;background: #fff;}
.filter-item{height: 90rpx;flex: 1;overflow: hidden;display: flex;align-items: center;justify-content: center;}
.tri-icon{width: 0;height: 0;border: 5px solid;border-color: #999 transparent transparent;margin: 12rpx 0 0 5rpx; }
.filter-date{height: 120rpx;padding: 0 50rpx;}
.date-input{width: 190rpx;height: 50rpx;border-radius: 10rpx;border: 1rpx solid #eee;padding: 0 20rpx;box-sizing: border-box;font-size: 24rpx;}
.date-line{width: 20rpx;height: 2rpx;background: #ddd;margin: 0 20rpx;}
.ser-btn{width: 120rpx;height: 50rpx;color: #fff;background: #f8b616;line-height: 50rpx;font-size: 26rpx;margin:0;margin-left: auto;}
.fixed-top{position: fixed;top: 0;width: 100%;background: #fff;}
.padding-top{padding-top: 300rpx;}
.clear-icon{padding: 0 10rpx;}
.gray-back{background: #f7f7f7;}
.date-item{padding:40rpx 50rpx 20rpx;line-height: 1;font-size: 24rpx;color: #999;}
/* 流水切换 */
.flowtab{margin: 30rpx 50rpx 0;border-radius: 10rpx;border: 1rpx solid #f8b616;overflow: hidden;}
.flowtab-item{flex: 1;border-right: 1rpx solid #f8b616;background: #fff;color: #f8b616;height: 50rpx;font-size: 26rpx;text-align: center;line-height: 50rpx;}
.flowtab .flowtab-item:last-child{border: 0;}
.flowtab-item-ac{background: #f8b616;color: #fff;}