/* distribution/pages/warehouse/warehouseParts/warehouseParts.wxss */
@import "/distribution/static/wxss/common";

.header{position: relative;height: 180rpx;}
.header-layer{position: absolute;top: 40rpx;background: #fff;margin:auto;width:710rpx;left: 0;right: 0;border-radius: 10rpx;z-index: 9;}
.header-title{height: 80rpx;padding: 0 30rpx;border: 1rpx solid #f0f0f0;}
.house-name{font-size: 28rpx;color: #333;font-weight: bold;padding: 0 20rpx;}
.statistics-box{height: 160rpx;}
.statistics-item{flex: 1;text-align: center;}
.more-view{width: 100%;height: 40rpx;margin-top:-10rpx;justify-content: center;display: flex;}
/* 库区 */
.part-item{margin: 0 20rpx 20rpx;background: #fff;border-radius: 10rpx;padding: 40rpx 30rpx;}
.part-name{padding-bottom: 10rpx;}
.tag{padding: 0 15rpx;background: #ffa515;color: #fff;margin-left: 20rpx;border-radius: 5rpx;}
/* 消息 */
.msg-border{margin: 0 50rpx 20rpx;border-top: 1rpx solid #f0f0f0;}
.msg-item{display: flex;padding: 5rpx 0;color: #333}
.msg-title{width: 200rpx;padding-left: 35rpx;}
.msg-content{flex:1;font-weight: 600;}