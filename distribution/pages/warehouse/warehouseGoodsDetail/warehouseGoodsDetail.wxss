/* distribution/pages/warehouse/warehouseDetail/warehouseDetail.wxss */
.header{height: 230rpx;position: relative;margin-bottom: 90rpx;padding: 30rpx;box-sizing: border-box;}
.warehouse-statistics{position: absolute;bottom: -80rpx;left: 0;right: 0;margin: 0 20rpx;background: #fff;border-radius: 10rpx;}
/* 商品 */
.goods-item{margin: 20rpx 20rpx 0;background: #fff;border-radius: 10rpx;height: 200rpx;padding: 0 30rpx;box-sizing: border-box}
.goods-icon{width: 140rpx;height:140rpx;border: 1rpx solid #ddd;margin-right: 30rpx;border-radius: 10rpx;}
.warning-tip{padding: 0 10rpx;background: rgb(254,61,61);border-radius: 5rpx;color: #fff;margin-right: 10rpx;}
/* 搜索 */
.search-input-box{width: 600rpx;height: 80rpx;border-radius: 80rpx;border:1rpx solid #fff;color: #fff;}
.search-img{width: 40rpx;height: 40rpx;padding: 0 20rpx 0 30rpx;}
.ser-btn{padding-right: 30rpx;}
.filter-icon{width: 40rpx;height: 40rpx;padding-right: 20rpx;}
/* 仓库信息 */
.name-title{height: 80rpx;border-bottom: 1rpx solid #eee;padding: 0 30rpx;}
.color-chunk{width: 10rpx;height: 20rpx;}
.house-name{margin: 0 20rpx;}
.statistics-box{height: 160rpx;}
.statistics-item{flex: 1;text-align: center;}
/* 侧边栏 */
.side-box{padding: 30rpx 50rpx;}
.class-item-box{flex-wrap: wrap;padding: 30rpx 0 10rpx;}
.class-item{width: 170rpx;height: 60rpx;line-height:60rpx;background: #f7f7f7;border-radius:10rpx;text-align: center;font-size: 24rpx;float:left;margin-bottom:20rpx;overflow: hidden;}
.class-item-ac{background: #fdb81a;color: #fff;}
.side-switch-item{height: 120rpx;border-top: 1rpx solid #eee;font-size: 30rpx;font-weight: 600;}
.side-btn{width: 260rpx;height: 70rpx;line-height:70rpx;border-radius: 70rpx;color: #fff;margin: 0;font-size: 28rpx;}
.side-btn-box{position: absolute;bottom: 60rpx;width: 100%;padding:0 50rpx;box-sizing: border-box;}