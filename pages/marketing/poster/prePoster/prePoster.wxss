.box{padding: 20rpx 30rpx 0;}
.common-box{background: #fff;border-radius: 10rpx;padding-left: 20rpx;padding-right: 20rpx;}
.flex-between{display: flex;align-items: center;justify-content: space-between;}
.flex-center{display: flex;align-items: center;}
.title-font{font-size: 36rpx;font-weight: 600;}
.chose-goods-box{height: 120rpx;box-sizing: border-box;}
.goods-icon{height: 35rpx;width: 35rpx;margin: 0 20rpx;}
.right-icon{width: 16rpx;height: 30rpx;}
.module-box{margin-top: 20rpx;position: relative;padding-bottom: 45rpx;margin-bottom: 93rpx;}
.module-title{font-size: 36rpx;font-weight: 600;padding-top: 30rpx;line-height: 1;}
.gray-color{color: #999;}
/* 模板 */
.inline{display:inline-block;}
.module-item{display: flex;flex-direction: column;align-items: center;width: 140rpx;height: 300rpx;margin: 0 25rpx;margin-top: 40rpx;}
.module-item text{font-size: 24rpx;color: #999;height: 60rpx;line-height: 60rpx;width: 100%;
white-space: nowrap;text-overflow: ellipsis;overflow: hidden;text-align: center;}
.img-box{height: 240rpx;width:100%;background: #fff;border-radius: 10rpx;box-shadow: 0 0 20rpx #ddd;display: flex;align-items: center;justify-content: center;position: relative;}
.check-icon{width: 33rpx;height: 33rpx;position: absolute;bottom: 0;right: 0;}
.module-img{width: 100rpx;height: 210rpx;}
.dir-icon{width: 25rpx;height: 25rpx;}
.scroll-box{flex: 1;height: 366rpx;white-space:nowrap;overflow: hidden;}
/* 选择更多图片 */
.chose-goodsimg-box{position:absolute;width: 610rpx;height: 120rpx;border-radius: 10rpx;background: #fff;left: 0;right: 0;margin: auto; bottom: -74rpx;box-shadow: 0 0 20rpx #ddd;padding: 0 45rpx;box-sizing: border-box;}
.add-img-icon{width: 35rpx;height: 30rpx;margin-right: 10rpx;}
/* 标题推荐心语 */
.des-box{height: 163rpx;margin-bottom: 20rpx;}
.des-main-box{flex:1;}
.des-title-icon{height: 80rpx;width: 80rpx;margin-right: 20rpx;}
.des-title-text{font-size: 32rpx;font-weight: 600;}
.des-des-text{font-size: 26rpx;color: #999;width:510rpx;overflow: hidden;text-overflow: ellipsis;white-space: nowrap;}
.red-btn{position:fixed;bottom:20rpx;left:0;right:0;margin:auto;width: 710rpx;height:100rpx;line-height:100rpx;color:#fff;text-align:center;background-size:cover;background-image:url("data:image/png;base64,")}
/* 弹框 */
.showmodal{font-size:30rpx;padding: 50rpx 40rpx;}
.showmodal .textarea-box{border: 1rpx solid #ddd;padding: 20rpx;margin-bottom:40rpx;box-sizing: border-box;height: 173rpx;border-radius: 10rpx;font-weight: 500;}
.textarea-box textarea{width: 100%;text-align: left;height: 100rpx;color:#333333;}
.layer-num{text-align: right;font-size: 24rpx;color: #999;}
.btn-group{display: flex;justify-content: space-between;}
.btn-group button{margin: 0;}
.cancel-btn{color: #999;border: 1rpx solid #ddd;background: #fff;}