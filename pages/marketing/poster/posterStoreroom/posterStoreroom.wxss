.box{padding: 20rpx 30rpx 120rpx;}
.common-box{margin-bottom: 20rpx;background: #fff;border-radius: 10rpx;padding-left: 50rpx;padding-right: 50rpx;}
.flex-between{display: flex;align-items: center;justify-content: space-between;}
.flex-center{display: flex;align-items: center;}
.title-font{font-size: 36rpx;font-weight: 600;}
.chose-goods-box{height: 120rpx;box-sizing: border-box;}
.goods-icon{height: 35rpx;width: 35rpx;margin-right:20rpx;}
.right-icon{width: 16rpx;height: 30rpx;}
/* 仓库 */
.storeroom-item{padding:0 50rpx; overflow: hidden;}
.storeroom-title{font-size: 36rpx;font-weight: 600;padding: 40rpx 0;line-height: 1;}
.all-img-box{display: flex;margin-bottom: 70rpx;}
.all-img-box .show-img-box:last-child{margin: 0;}
.show-img-box{width: 140rpx;height: 240rpx;background: #fff;border-radius: 10rpx;display: flex;align-items: center;justify-content: center;box-shadow: 0 0 20rpx #ddd;margin-right: 20rpx;}
.show-img-box image{width:100rpx;height: 210rpx;}
.red-btn{position:fixed;bottom:20rpx;left:0;right:0;margin:auto;width: 710rpx;height:100rpx;line-height:100rpx;color:#fff;text-align:center;background-size:cover;background-image:url("data:image/png;base64,")}

/* 弹框 */
.showmodal{font-size:30rpx;padding: 50rpx 40rpx;}
.modal-input{border-bottom: 1rpx solid #ddd;margin-bottom: 50rpx;text-align: left;padding:15rpx 0;font-size:30rpx;}
.btn-group{display: flex;justify-content: space-between;}
.btn-group button{margin: 0;}
.cancel-btn{color: #999;border: 1rpx solid #ddd;background: #fff;}
.noabled-btn{border-color: #ddd;background: #ddd;}