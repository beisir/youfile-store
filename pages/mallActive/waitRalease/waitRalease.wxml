<view class='listData'>
  <view>
    <view class='ld-t'>{{activeDetails.activityName}}</view>
    <view class='ld-cont'>
      <view class='ld-yellow' wx:if="{{activeDetails.activityStatus=='init'}}">
        活动未开始
      </view>
      <view class='ld-red' wx:if="{{activeDetails.activityStatus=='be_doing'}}">
        活动进行中
      </view>
      <view class='ld-red' wx:if="{{activeDetails.activityStatus=='finish'}}">
        活动已结束
      </view>
      <view>
        <text>活动时间</text>{{activeDetails.startTime}} 至 {{activeDetails.endTime}}</view>
      <view>
        <text>活动类目</text>{{activeDetails.categoryCode}}</view>
      <view>
        <text>活动介绍</text>{{activeDetails.introduction}}</view>
    </view>
  </view>
</view>
<view class='wait-cont'>
  <view class='tab-cont'>
    <view class='tab-view {{tabSwitch=="0"?"tab-view1":"tab-view2"}}'>
      <view bindtap='tabSwitch' class='{{tabSwitch=="0"?"tab-act":""}}' data-index='0'>待发布</view>
      <view bindtap='tabSwitch' class='{{tabSwitch=="1"?"tab-act":""}}' data-index='1'>已参加</view>
    </view>
  </view>
  <view class='add-cont'  wx:if="{{listData.length>0}}">
    <block wx:for="{{listData}}" wx:key="{{index}}">
      <view wx:if="{{item.editStatus=='not_edit'}}">
        <view class='g-cont'>
          <view class='g-image'>
            <image src='/image/pre.png'></image>
            <view>待完善</view>
          </view>
          <view>
            <view class='g-title'>{{item.goodsVO.name}} </view>
            <view class='gprice'>活动价:待完善 </view>
            <view class='gprice'>起批量:待完善 </view>
            <view>活动库存: 待完善</view>
          </view>
        </view>
        <view class='g-bottom'>
          <button class='g-border' data-id="{{item.goodsVO.id}}" bindtap='editGoods'>编辑</button>
          <button>预览</button>
          <button>发布</button>
        </view>
      </view>
      <view wx:if="{{item.editStatus=='edit'}}">
        <view class='g-cont'>
          <view class='g-image'>
            <image src='/image/pre.png'></image>
          </view>
          <view>
            <view class='g-title'>{{item.goodsVO.name}} </view>
            <view class='gprice'>活动价:
              <text>￥{{item.goodsActivityRelationVOS.name[0].goodsPromotionList[0].activityPricr}}</text> </view>
            <view class='gprice'>起批量:
              <text>{{item.goodsActivityRelationVOS.name[0].batchNum}}</text> </view>
            <view>活动库存: {{item.goodsActivityRelationVOS.name[0].stockNum}}</view>
          </view>
        </view>
        <view class='g-bottom'>
          <button class='g-border' data-id="{{item.goodsVO.id}}" bindtap='editGoods'>编辑</button>
          <button class='g-border' >预览</button>
          <button class='g-border' data-id='"{{item.goodsVO.id}}' bindtap='releaseGoods'>发布</button>
        </view>
      </view>
    </block>
  </view>
