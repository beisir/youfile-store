@import '../addGoods/addGoods';
page{height: 100%;display: flex;flex-direction: column;overflow: hidden;}
.all-box{overflow:hidden;box-sizing: border-box;flex: 1;}
.add-cont{overflow: hidden;margin-bottom: 0;}
.goods-spec{border-radius: 10rpx;margin: 20rpx;background: #fff;}
.spec-t{height: 100rpx;line-height: 100rpx;font-size: 34rpx;border-bottom: 2rpx solid #F2F2F2;padding: 0 25rpx;}
.spec-cont{font-size: 26rpx;color: #666;margin: 25rpx}
.spec-cont view{font-size: 30rpx;}
.spec-cont text{color: #000}
.set-price{border-bottom: 2rpx dashed #EDEDED;margin:25rpx;padding:40rpx 0;}
.set-price>view{width: 33.3%;display: inline-block;font-size: 24rpx;color: #999;text-align: center;}
.set-price>view>view{background: #F1F1F1;height: 95rpx;border-radius:10rpx;margin: 0 auto;position: relative;width: 95%;}
.set-price input{position: absolute;height: 80rpx;width: 175rpx;border-radius:10rpx;box-shadow: 5rpx 0 30rpx #EDEDED;top:-40rpx;left: 0;right:0;margin:auto;z-index: 10;background: #fff;color: #000}
.set-price>view>view view{position: absolute;bottom: 10rpx;width: 100%;text-align: center}
.spec-t button{height: 60rpx;line-height: 58rpx;width: 160rpx;border-radius: 60rpx;border:2rpx solid #CCAA77;color: #CCAA77;font-size: 26rpx;float: right;background: #fff;margin-top: 20rpx;margin-left: 20rpx;}
.spec-t .spec-one{background: #CCAA77;color: #fff;}
.frame{width: 100%;height: 100%;position: fixed;top: 0;background: rgba(0, 0, 0, 0.5);z-index: 100;}
.frame>view{background: #fff;height: 90%;position: fixed;display: flex;flex-direction: column;bottom:0;}
.frame>view>image{position: absolute;width: 40rpx;height: 40rpx;right:30rpx;top:30rpx}
.fra-t{font-size: 40rpx;text-align: center;height: 120rpx;line-height: 120rpx;}
.fra-discout>view{width: 25%;text-align: center;display: inline-block;}
.fra-discout>view button{height: 65rpx;width: 150rpx;border-radius: 10rpx;line-height: 65rpx;text-align: center;font-size: 26rpx;border: 2rpx solid #DDDDDD;margin-bottom: 10rpx;background: #fff;}
.fra-tip{font-size: 24rpx;color: #999;padding: 10rpx 0;}
.fra-self{font-size: 28rpx;border-bottom: 2rpx dashed #E2E2E2;padding:10rpx 0;margin-top: 10rpx;}
.fra-self>view{margin-bottom:20rpx;}
.fra-self input{height: 60rpx;line-height: 60rpx;width: 240rpx;border: 2rpx solid #E6E6E6;border-radius: 10rpx;display: inline-block;vertical-align: middle;margin-right: 20rpx;padding-left: 20rpx;}
.fra-goods{font-size: 28rpx;}
.fra-goods text{color: #CCAA77;height: 70rpx;line-height: 70rpx;}
.frame .add-cont{flex: 1;overflow: scroll;margin:0;padding-bottom: 20rpx;}
.frame .add-cont>view{margin:0 50rpx;margin-top: 20rpx;}
.frame .g-cont>view view{font-size: 26rpx;color: #333;overflow: hidden;text-overflow: ellipsis;white-space: nowrap;width: 470rpx;}
.frame .g-cont{padding-top: 20rpx;padding-left: 20rpx;}
.frame .g-image{width: 100rpx;height: 100rpx;margin-left: 0}
.frame .g-image image{width: 100rpx;height: 100rpx;}
.frame .add-more{background: #CCAA77;color: #fff;position: initial;}
.padding-box{padding-left:50rpx;padding-right:50rpx;}
.bold-font{font-weight: 600;}
.ac-btn{background: #ca7!important;color: #fff;border-color: #ca7!important;}