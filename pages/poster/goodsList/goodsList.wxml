<view style='padding:0 30rpx 30rpx;'>
  <view class='flex-between search-own'>
    <view class='flex-between search-box-own '>
      <view class='flex-center'>
        <image class='search-icon-own' src='/image/search.png'></image>
        <input type='text'></input>
      </view>
      <view>
        <image class='search-icon-own' src='/image/close.png'></image>
      </view>
    </view>
    <view class='search-btn'>搜索</view>
  </view>

  <view class='goods-item' wx:for="{{goods}}" wx:key="{{index}}">
    <view class='flex-center goods-top-box' bindtap='checkedGoods' data-item='{{item}}'>
      <icon wx:if="{{item.checked}}" type="success" size="40rpx" color="#CCAA77" />
      <icon wx:else type="circle" size="40rpx"/>
      <view class='goods-icon-box'>
        <image mode='aspectFit' class='goods-icon' src='/image/search.png'></image>
      </view>
      <view class='goods-msg-box'>
        <view class='goods-name'>周大福 赵丽颖赵丽颖陪伴款颖火虫赵丽颖陪伴款颖火虫陪伴款颖火虫</view>
        <view>
          <view class='goods-price'>批发价:￥1500</view>
          <view class='goods-price'>零售价:￥1800</view>
        </view>
      </view>
    </view>
    <view class='dotted-line'><view wx:for='[,,,,,,,,,,,,,,,,,,,,,,,,,,,,,,]' wx:key="{{index}}"></view></view>
    <!-- 图片 -->
    <view class='goods-img-box' hidden='{{!item.checked}}'>
      <view class='goods-img-item' wx:for="{{item.img}}" wx:key="{{index}}" wx:for-item='ii' wx:for-index="imgindex" bindtap='checkedImg' data-index="{{imgindex}}" data-goodsindex="{{index}}" data-item="{{ii}}">
        <image class='' src='/image/uploadStore.png'></image>
        <image wx:if='{{ii.checked}}' class='img-chose-icon' src='/image/square-check.png'></image>
        <image wx:else class='img-chose-icon' src='/image/square-uncheck.png'></image>
      </view>
    </view>
  </view>
</view>
<view class='bottom-btn-box'>
  <view class='button-type'>已选择</view>
  <view class='btn-line'></view>
  <view class='button-type'>确定</view>
</view>