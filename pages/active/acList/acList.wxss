.com-padding{padding-left:30rpx;padding-right: 30rpx;}
.add-btn{width: 160rpx;height: 60rpx;background: #f8b616;color: #fff;font-size: 24rpx;text-align: center;line-height: 60rpx;border-radius: 10rpx;margin-left: 15rpx;}
.banner-img{width: 100%;}
.ac-title{font-size: 36rpx;font-weight: 600;margin: 10rpx 0;}
.ac-status{font-size: 30rpx;font-weight: 600;margin:10rpx 0;}
.margin-text{margin-left: 30rpx;}
.normal-font{font-size: 26rpx;}
.des-title{padding-right: 20rpx;}
.flex-box{display: flex;}
.flex-one{flex: 1;}
.image-box{position: relative;}
.msg-box{padding-bottom: 35rpx;}