<!-- 开通 -->
<mes show="{{openModal}}">
  <view class='modal-box'>
    <text>支付交易单号</text>
    <view>
      <input type='text' data-type='payCode' value="{{payCode}}"  class='modal-input'  placeholder='请输入支付交易单号' bindinput='watchInput'></input>
    </view>
    <button bindtap='sureOpen'>开通小云店</button>
  </view>
</mes>
<!-- 搜索 -->
<view class='search-box'>
    <input bindinput='watchInput' placeholder='输入订单号/手机号/昵称' type='text'></input>
</view>

<!-- tab -->
<view class='tab-box'>
    <block wx:for="{{tab}}" wx:key="{{index}}">
      <view bindtap='switchTab' data-index='{{index}}' data-type='{{item.type}}' class="search-item {{item.check?'ac-item':''}}">{{item.name}}{{item.num?"("+item.num+")":""}}</view>
    </block>
</view>
<!-- 列表 -->
<view class='order-box'>

  <view class='order-title'>
    <view class='col-md'>
      <image class='user-icon' src='/image/w2.png'></image>
      <text class='store-name'>啊啦啦啦</text>
    </view>
    <text class='youyou'>已付款</text>
  </view>

  <view class='price-box'>
    <view class='tip-font'>
      <text>新购</text>
      <text class='line'></text>
      <text>订单金额</text>
    </view>
    <view>
      <text class="price">￥5680.00</text>
    </view>
  </view>


  <view class='store-box'>
    <text class='store-name'>小云店商城专业版</text>
    <text class='store-type'>新批零</text>
  </view>

  <navigator url='../adminOrderDetail/adminOrderDetail'>
  <view class='bb'>
    <view class='msg-box'>
      <view class='msg-item'>
        <text class='msg-title'>服务时间</text>
        <text class="msg-content">12个月</text>
      </view>
      <view class='msg-item'>
        <text class='msg-title'>客户手机</text>
        <text class="msg-content">13333333333</text>
      </view>
      <view class='msg-item'>
        <text class='msg-title'>下单时间</text>
        <text class="msg-content">2018-09-18 14:53:00</text>
      </view>
    </view>
    <image class='more' src='/image/mallr.png'></image>
  </view>
  </navigator>
  <button bindtap='openStore' class='open-btn'>开通小云店</button>
</view>  