<view class='order-box'>
  <view class='price-box'>
    <image class='logo' src='/image/youlife.png'></image>
    <view>
      <text class="com">新购-来自</text>
    </view>
    <view>
      <text class="price">￥5680.00</text>
    </view>
  </view>

  <view class='order-title'>
    <view>
      <text class='store-name'>小云店商城专业版</text>
      <text class='store-type'>新批零</text>
    </view>
    <text class='youyou'>已付款</text>
  </view>

  <view class='msg-box'>
    <block wx:for="{{msgList}}">
      <view class='msg-item'>
        <text class='msg-title'>{{item.title}}</text>
        <text class="msg-content">{{msg[item.val]}}</text>
      </view>
    </block>
    <view class='msg-item' style='justify-content: space-between;'>
      <view class='flex'>
        <text class='msg-title'>手机号码</text>
        <text class="msg-content">13333333333</text>
      </view>
      <image class='tel-icon' bindtap='call' src='/image/tel1.png'></image>
    </view>
  </view>

</view>

<view class='order-box'>

  <view>
    <block wx:for="{{orderList}}">
      <view class='msg-item'>
        <text class='msg-title'>{{item.title}}</text>
        <text class="msg-content">{{order[item.val]}}</text>
      </view>
    </block>
  </view>

  <view class='border'></view>

  <view class="invoiceBox">
    <block wx:for="{{invoiceList}}">
      <view class='msg-item'>
        <text class='msg-title'>{{item.title}}</text>
        <text class="msg-content">{{invoice[item.val]}}</text>
      </view>
    </block>
  </view>

</view>

<view class='order-box'>
  <view class='pay-item'>
    <text class='msg-title'>支付方式</text>
    <text class="msg-content">其他支付方式</text>
  </view>
  <view class='pay-item'>
    <text class='msg-title'>优惠码支付</text>
    <text class="msg-content">￥900.00</text>
  </view>
  <view class='pay-item' style='padding:0;'>
    <text class='msg-title'>实付金额</text>
    <text class="msg-content gold">￥900.00</text>
  </view>
</view>