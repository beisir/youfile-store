.wk-cont{background:#fff;margin:20rpx;border-radius:20rpx;overflow:hidden}
.wk-title{font-size:24rpx;background:#f8b616;color:#fff;padding:50rpx 50rpx 100rpx;position:relative}
.wk-title view{font-size:72rpx;margin-top:30rpx}
.wk-bot{position:relative;margin: 70rpx 20rpx 0;background:#fff;border-radius: 10rpx;}
.wk-bot>view,.wk-bot>navigator{width:33.3%;font-size:40rpx;display:inline-block;text-align:center;margin:30rpx 0;position:relative}
.wk-bot>view view,.wk-bot>navigator view{font-size:28rpx}
.wx-bot-cont>view,.wx-bot-cont>navigator{width:25%;margin-top:40rpx;display:inline-block;text-align:center}
.wk-bot>view .wk-xian,.wk-bot>navigator .wk-xian{height:45rpx;background:#f0f0f0;width:2rpx;position:absolute;top:38rpx}
.wk-bot>.wk-fg{background:#f0f0f0;width:88%;position:absolute;height:1rpx;top:140rpx;left:6%}
.wx-bot-cont{font-size:28rpx;padding-bottom:80rpx;}
.wk-title image{width:55rpx;position:absolute;right:20rpx;top:50rpx}
.wx-bot-cont image{width:80rpx}
.wx-bot-cont>view view:first-child{width:50rpx;height:50rpx;margin:0 auto;padding-bottom:10rpx}
.isStoreOwer{position: fixed;width: 100%;height: 100%;top: 0;left: 0;background: #F7F7F7;z-index:9999;}
.fun-title{height: 80rpx;line-height: 80rpx;padding-left: 35rpx;font-size: 30rpx;font-family: 'STSong';font-weight: 600;border-bottom: 1rpx solid #eee;}
/* 公告 */
.tips-box{height: 100rpx;background: #fdfced;position: absolute;bottom: -50rpx;left: 0;right: 0;margin: auto;width: 710rpx;border-radius: 10rpx;box-sizing: border-box;}
.tip-item{color: #e5723a;font-size: 28rpx;height: 100rpx;font-weight: 600;font-family:STHeiti;overflow: hidden;white-space: nowrap;text-overflow: ellipsis;padding: 0 20rpx;}
.tip-icon{height: 30rpx;width: 30rpx;}
/* 提交按钮 */
.reset-form-btn{width: 100%;border: 0;height: 130rpx;color: #333;background: #fff;line-height: normal;padding: 0;margin: 0;font-size: 28rpx;}
.entry-icon-box{height: 90rpx;}
/* 图片icon */
.spec-img-box image{width: 50rpx!important;height:50rpx!important;}
.title-position-box{position: relative}
/* 新功能弹窗 */
.com-new-function-layer{position: fixed;background: rgba(0, 0, 0, 0.4);height: 100%;width: 100%;top: 0;left: 0;z-index: 999;}
.com-new-function-inner{position: fixed;width: 710rpx;height: 984rpx;top: 0;right: 0;bottom: 0;left: 0;margin: auto;z-index: 1000;border-radius: 10rpx;}
.com-new-function-layer .title-pic{width: 150rpx;height: 150rpx;margin: 30rpx auto;display:block;}
.com-new-function-layer .white-title{font-size: 50rpx;font-weight: 600;color: #fff;text-align: center;margin-bottom: 40rpx;line-height: 1;}
.com-new-function-layer .white-box{background: #fff;border-radius: 10rpx;margin: auto;width: 644rpx;box-sizing: border-box;padding: 30rpx 50rpx;box-shadow:  0 0 30rpx #ddd;}
.com-new-function-layer .layer-msg-item{font-size: 30rpx;font-weight: 600;line-height: 1;margin-bottom: 35rpx;}
.layer-bottom-btn{width: 100%;height: 80rpx;border-radius: 100rpx;color: #fff;font-size: 30rpx;line-height: 80rpx;margin-top: 60rpx;}
