<view class="main">
  <view class="search-box">
    <input class="search-input" value="{{value}}" bindconfirm='searchBtn' auto-focus='ture' placeholder-class='pre-input' placeholder='请输入商品关键词' bindinput="searchInput" />
    <image class="home-ser-new" src="/image/search.png"></image>
    <view class='serCont' bindtap="searchBtn" wx:if="{{!closeCont}}">搜索</view>
    <image class="home-ser-new ser-font" bindtap='emptyInput' wx:if="{{closeCont}}" src="/image/ser.png"></image>
  </view>
  <view class="result" wx:if="{{showResult}}">
    <view class="result-box" wx:if="{{result.length > 0}}">
      <scroll-view scroll-y="true" style="height:100%">
        <view class="result-list" wx:for="{{result}}" wx:key="index">
          <view wx:if='{{item.isHide}}' class='isHideGoods'>
          <image src="/image/isshow.png"></image>
          <view>该商品</view>
          <view>加商友可见</view>
        </view>
        <block wx:if='{{item.isHide}}'>
          <view>
            <image src="{{baseUrl}}{{item.mainImgUrl}}?x-oss-process=style/goods-small"></image>
            <view class="result-text result-text-h">
              <text>{{item.name}}</text>
            </view>
            <view class="result-text result-text1">
              零售
              <text style='{{limitShow!=1?"color:#666":"#CCAA77"}};'>￥ {{item.sellPrice}}</text>
              <view wx:if='{{limitShow==1}}'>
                批发
                <image src='/image/wh.png'></image>
              </view>
              <view wx:if='{{limitShow!=1}}'>
                批发
                <text>￥ {{item.wholesalePrice}}</text>
              </view>
            </view>
          </view>
        </block>
        <block wx:if='{{!item.isHide}}'>
          <navigator url="../goodsDetails/goodsDetails?goodsId={{item.id}}">
            <image src="{{baseUrl}}{{item.mainImgUrl}}?x-oss-process=style/goods-small"></image>
            <view class="result-text result-text-h">
              <text>{{item.name}}</text>
            </view>
            <view class="result-text result-text1">
              零售
              <text style='{{limitShow!=1?"color:#666":"#CCAA77"}};'>￥ {{item.sellPrice}}</text>
              <view wx:if='{{limitShow==1}}'>
                批发
                <image src='/image/wh.png'></image>
              </view>
              <view wx:if='{{limitShow!=1}}'>
                批发
                <text>￥ {{item.wholesalePrice}}</text>
              </view>
            </view>

          </navigator>
        </block>
        </view>
        <view class='nomore'>没有更多了</view>
      </scroll-view>
    </view>
    <view class="result-null" wx:if="{{result.length==0}}">
      <view class="nomore">
        <view>
          <image src="/image/nohome.png"></image>
        </view>
        暂时还没有上架商品
      </view>
    </view>
  </view>
  <view class="init-page" wx:else>
    <view wx:if="{{history.length > 0}}">
      <image bindtap="removeAll" src="/image/rev.png"></image>
      <view class="title">
        <text>历史搜索</text>
      </view>
      <view class="tags">
        <view wx:for="{{history}}" wx:key="index">
          <text bindtap="keywordHandle" data-name="{{item}}" data-id='{{index}}'>{{item}}</text>
        </view>
      </view>
    </view>
  </view>
</view>