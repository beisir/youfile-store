<!-- 获取取件码 -->
<mes show="{{codeModal}}">
  <view>
    <text>取货码</text>
    <view class='mes-tel1'>{{order.claimGoodsNum}}</view>
    <view class='mes-text'>请您安排好时间，在营业时间内到店取货</view>
  </view>
</mes>
<!-- 取消订单 -->
<clo show="{{cancelModal}}" bind:sureSelectArea="sureSelectAreaListener">
  <view wx:for='{{reason}}' wx:key='{{index}}' data-current="{{index}}" bindtap='swichReason'>
    <icon wx:if="{{item.selected}}" type="success" color="#CCAA77" data-index="{{index}}" size='18' class="cart-pro-select" />
    <icon wx:else type="circle" class="cart-pro-select" size='18' data-index="{{index}}" /> {{item.title}}
  </view>
  <button bindtap='sureCancel'>确定</button>
</clo>
<!-- 删除订单 -->
<mes show="{{delModal}}" bind:sureSelectArea="sureSelectAreaListener">
  <view>
    <text>确认删除订单？</text>
    <button bindtap='sureDel'>确定</button>
  </view>
</mes>
<!-- 售后服务 -->
<mes show="{{afterModal}}" bind:sureSelectArea="sureSelectAreaListener">
  <view>
    <text>如有疑问，请咨询客服人员</text>
    <view class='mes-tel'>{{order.storeInfo.servicePhone}}</view>
  </view>
</mes>


<view class='order-title-box' style='background-image:url(/image/back.png);'>
  <!-- 待付款 -->
  <view class='flex-box' hidden='{{status5}}'>
    <view class='np-title'>
      <image src="/image/nz.png"></image>等待买家付款
    </view>
    <view class='np-right'>
      <view>剩余时间：{{order.timeoutExpressSecond}}</view>
      <view>需付款：￥{{order.orderAmount}}</view>
    </view>
  </view>
  <!-- 自提  待取货-->
  <view class='flex-box' hidden='{{status6}}'>
    <view class='np-title'>
      <image src="/image/nz.png"></image>请在营业时间内提取您的商品
    </view>
  </view>
  <!-- 交易成功 -->
  <view class='np-title' hidden='{{status7}}'>
    <image src="/image/mon.png"></image>交易成功
  </view>
  <!-- 交易关闭 -->
  <view class='np-title' hidden='{{status8}}'>
    <image src="/image/qx.png"></image>交易关闭
  </view>
</view>
<view class='np-ct'>
  <view class='getcode' hidden='{{status7}}'>
    <image src="/image/suo.png"></image>取货码：
    <text>{{order.claimGoodsNum}}</text>
  </view>
  <view class='np-view np-view1'>
    <image src="/image/ad.png"></image>
    <view>门店自提：{{order.storeInfo.address}}</view>
    <text>营业时间: {{order.storeInfo.openingTime}}</text>
    <view class='sf-tel'>
      <image src="/image/pre.png"></image>商家电话：{{order.storeInfo.servicePhone}}</view>
  </view>
</view>
<view class='np-mes'>
  <view>
    <image src="/image/mes.png"></image>联系卖家</view>
  <view>
    <image src="/image/tel1.png"></image>拨打电话</view>
</view>
<view class='cf-cont'>
  <view class='c-title'>
    <image src="/image/ic1.png"></image>{{order.storeInfo.storeName}}
    <image class='itimg' src="/image/icl.png"></image>
    <view class='order-zt'>自提</view>
  </view>
  <!-- 商品 -->
  <view>
    <view class="cart-box" wx:for="{{order.goodsInfos}}" wx:key="{{index}}">
      <view class="cart-list">
        <navigator>
          <image class="cart-thumb" src="{{item.mainImgUrl}}"></image>
        </navigator>
        <view class='ct-title ct-title1'>{{item.goodsName}}</view>
        <view class="heji">共
          <text>{{item.num}}</text>件商品</view>
      </view>

      <!-- 表格 -->
      <view class="table">
        <view class="tr">
          <view class="th">规格</view>
          <view class="th">数量</view>
          <view class="th">金额</view>
        </view>
        <view class="tr" wx:for="{{item.orderDetails}}" wx:key="{{index}}">
          <view class="td">{{item.goodsName}}</view>
          <view class="td">{{item.num}}件</view>
          <view class="td">￥{{item.wholesalePrice}}</view>
        </view>
      </view>

    </view>
  </view>
</view>
<!-- 待付款 -->
<view hidden='{{status5}}'>
  <view class='np-order'>
    <view>订单号
      <text>{{order.orderNumber}}</text>
    </view>
    <view>创建时间
      <text>{{order.createDate}}</text>
    </view>
  </view>
