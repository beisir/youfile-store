  <view class='flex-center'>
    <image src='/image/nz.png' class='title-icon'></image>
    <text class='status-font'>交易成功</text> 
  </view>
</view>
<!-- 商店 -->
<view class='store-box padding-box'>
  <view class='store-line'>
    <image src='/image/ad.png' class="store-icon"></image>
    <text class='store-add'>门店地址：北京市王进SOHO</text>    
  </view>
  <view class='store-line store-time'>营业时间：周一周日9:00~19:00</view>
  <view class='store-line store-time'>
    <image src='/image/pre.png' class='store-icon'></image>
    <text class='gray-color'>买家电话：192123123123</text>    
  </view>
</view>
<!-- 按钮 -->
<view class='mid-btn padding-box'>
  <view class='flex-center'>
    <image src='/image/mes.png' class='btn-icon'></image>
    <text>联系卖家</text>
  </view>
  <view class='btn-line'></view>
  <view class='flex-center'>
    <image src='/image/tel1.png' class='btn-icon'></image>
    <text>拨打电话</text>
  </view>
</view>
<!-- 货 -->
<view class='goods-detail-box'>
  <view class='item-title padding-box'>
    <view class='flex-center'>
      <image src="/image/12.png" class='cloud-icon'></image>
      <text class='com-name-box'>{{item.name}}</text>
      <image src='/image/mallr.png' class='right-icon'></image>
      <view class='type-chunk'>到店</view>
    </view>
    <view class='status-text'>
      <text wx:if="{{item.type == 'unpaid'}}">待付款</text>
      <text wx:if="{{item.type == 'cancelled'}}" class="gray-color">已过期</text> 
      <text wx:if="{{item.type == 'finish'}}" class="gray-color">已完成</text>                       
    </view>
  </view>
  <view class='goods-box'>
    <view class='gray-layer' wx:if="{{item.type == 'cancelled'}}"></view>
    <view class='goods-icon'>
      <image src='{{item.icon}}'></image>
    </view>
    <view class='tip-box'>
      <text wx:for='{{item.tip}}' wx:for-item="tip">{{tip}}</text>
    </view>
    <view class='goods-price gold-font'>￥{{filter.filterMoney(item.price)}}</view>
  </view>
</view>
  <!-- 订单号 -->
  <view class='msg-list-box padding-box'>
    <view class='msg-item'>
      <text class='msg-title'>订单号</text>
      <text class='msg-detail'>123123123123</text>
    </view>
    <view class='msg-item'>
      <text class='msg-title'>创建时间</text>
      <text class='msg-detail'>2016-11-11 23:14:23</text>
    </view>
  </view>
  <view class='border-line'></view>
  <view class='msg-list-box padding-box'>
    <view class='msg-item'>
      <text class='msg-title'>支付方式</text>
      <text class='msg-detail'>在线支付</text>
    </view>
  </view>

  <!-- 价格 -->
  <view class='msg-list-box padding-box' style='margin:20rpx 0 130rpx;'>
    <view class='msg-item'>
      <text class='msg-title'>订单金额</text>
      <text class='msg-detail gold-font'>￥21299.00</text>
    </view>
    <view class='msg-item'>
      <text class='msg-title'>红包礼金</text>
      <text class='msg-detail gray-color'>-￥0.00</text>
    </view>
    <view class='msg-item'>
      <text class='pay-price-title'>应付金额</text>
      <text class='msg-detail pay-price'>￥2121212.00</text>
    </view>
  </view>

  <!-- 底部按钮 -->
  <view class='bottom-btn-box padding-box'>
    <view class='btn pay-btn'>付款</view>
    <view class='btn cancel-btn'>取消订单</view>    
  </view>