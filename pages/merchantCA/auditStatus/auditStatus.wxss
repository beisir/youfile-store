/* pages/merchantCA/auditStatus/auditStatus.wxss */
.com-box{position:relative;margin: 20rpx;background: #fff;border-radius: 10rpx;font-size: 30rpx;color: #333;}
.own-title{font-size: 36rpx;font-weight: 600;}
.status{padding: 15rpx 0 ;font-weight: 600;}
.time{font-weight: 500;}
.des-title{color: #999;padding: 20rpx 0 10rpx;}
.des-msg{font-weight: 600;}
.btn-box{height: 100rpx;border-top: 1rpx solid #eee;display: flex;align-items: center;flex-direction: row-reverse;margin: 0 30rpx;}
.btn{width: 160rpx;height: 60rpx;background: #f8b616;color: #fff;border-radius: 10rpx;text-align: center;line-height: 60rpx;font-size: 24rpx;}
.status-img{position: absolute;width: 127rpx;height: 110rpx;right: 30rpx;top:20rpx;}
.rotate-tri{transform: rotate(90deg);}
/* 标签 */
.title-box{padding:0 30rpx 0 40rpx;height: 234rpx;}
.title-icon{width: 110rpx;height: 110rpx;}

.title-msg-box{padding: 0 70rpx 0 25rpx;flex: 1;}
.title-text{font-size: 36rpx;color: #333;margin-bottom: 15rpx;font-weight: 600;}
.gray-text{color: #666;font-size: 28rpx;}

/* 弹窗 */
.layer-box{position: fixed;width: 100%;height: 100%;background: rgba(0, 0, 0, 0.4);z-index: 999;top: 0;left: 0;}
.layer-img{position: absolute;bottom: 0;width: 100%;height: 180rpx;z-index: 10;}
.layer-msg-box{position: absolute;bottom: -100%;z-index: 9;width: 710rpx;left: 0;right: 0;margin: auto;height:90%;max-height: 1120rp;box-sizing: border-box;background: #fff;border-radius: 10rpx;padding-bottom: 145rpx;display: flex;flex-direction: column;align-items: center;}
.layer-title{height: 160rpx;background: #fbfbfb;font-size: 40rpx;font-weight: 600;display: relative;width: 100%;}
.close-icon{width: 30rpx;height: 30rpx;top: 30rpx;right: 30rpx;position: absolute;}
.layer-text-box{flex:1;padding: 30rpx 70rpx 0;font-size: 28rpx;color: #373636;overflow-y: scroll;}
.sure-btn{width: 540rpx;height: 80rpx;line-height: 80rpx;background: #f8b616;text-align: center;color: #fff;border-radius: 80rpx;}