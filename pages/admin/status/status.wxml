<login-component id='login' inner-text="Some text"></login-component>
 <!-- 删除-->
<mes
  show="{{show1}}"
  bind:sureSelectArea="sureSelectAreaListener"
>
<view>
  <text>确认删除？</text>
  <button bindtap='confirmDetele'>确定</button>
</view>
</mes>
<view class="goods-ser">
  <navigator url='../serStatus/serStatus'><input placeholder="输入商品名称" value="{{value}}"  bindblur="blurInputEvent" /></navigator>
    <image class="home-ser"  src="/image/search.png"></image>
    <view class='home-img'  bindtap='showXl'>
      <view>
        筛选
      </view>
      <view hidden='{{showXl}}' class='st-xiala alert-xiala'>
        <image class="xiala"  src="/image/xiala.png"></image>
        <view class="{{alertTab==0 ? 'active' : ''}}" data-current="0" bindtap="alertNav">全部商品</view>
        <view class="{{alertTab==1 ? 'active' : ''}}" data-current="1" bindtap="alertNav">批零商品</view>
        <view class="{{alertTab==2 ? 'active' : ''}}" data-current="2" bindtap="alertNav">仅批发</view>
    </view>
    </view>
</view>
<view class='st-title'>
  <view class="{{currentTab==0 ? 'active' : ''}}" data-current="0" data-index='1' bindtap="swichNav">出售中</view>
  <view class="{{currentTab==1 ? 'active' : ''}}" data-current="1" data-index='0' bindtap="swichNav">仓库中</view>
  <view class="{{currentTab==2 ? 'active' : ''}}" data-current="2" data-index='4' bindtap="swichNav">已售完</view>
  <view class="{{classStatus? 'active' : ''}}" bindtap="swichNavLast">本店分类<image  src="{{sImg}}"></image></view>
</view>
<view class='hideSer' hidden='{{hidden}}' bindtap='hideSer'>
  <view  class='serList'>
      <view wx:for='{{list}}' wx:key='{{index}}' data-code='{{item.customCategoryCode}}' class="{{currentTabSer==index? 'active' : ''}}" data-current="{{index}}"  bindtap="swichSer">{{item.name}}<image src="/image/dui.png"></image></view>
  </view>
</view>
<scroll-view style='overflow:scroll' scroll-y="true" style="height:100%;" bindscrolltolower="bindDownLoad">
  <view class="touch-item {{item.isTouchMove ? 'touch-move-active' : ''}}" data-index="{{index}}" bindtouchstart="touchstart" bindtouchmove="touchmove" wx:for="{{detailList}}" wx:key="">
    <view class='content st-cont'  data-index="{{index}}">
      <view class='column'>
       <image class="editGoods"   bindtap='editGoods'  data-id='{{item.id}}' src="/image/mallr.png"></image>
       <image class="cart-thumb" src="{{baseUrl}}{{item.mainImgUrl}}"></image>
       <view  class='st-d-t'>{{item.name}}</view> 
       <view class='st-details'>
          <view class='st-d-status'>
            <view><text>批发:</text><text class='st-mom'>￥{{item.wholesalePrice}}</text></view>
            <view><text>零售:</text><text class='st-mom'>￥{{item.sellPrice}}</text></view>
            <!-- <view>供货：400</view><view>零售：400</view> -->
            <view>库存：{{item.stockNum}}<image class='warn' wx:if='{{item.stockNum<10}}' src="/image/warn.png"></image></view>
          </view>
          <view class='not' wx:if='{{item.stockNum<10}}'><view class='triangle_border_up'></view>该商品库存不足 请及时补货</view>
        </view>
      </view>
      <view class='st-bottom'>
          <view><button open-type="share" data-name='{{item.name}}' data-img='{{baseUrl}}{{item.mainImgUrl}}' data-id='{{item.id}}'>转发</button></view>
          <view bindtap='lookGoodsDetails'  data-id='{{item.id}}'>预览</view>
          <view wx:if='{{item.status==0}}' data-id='{{item.id}}' data-index='{{index}}' bindtap='changeStatus'>上架</view>
          <view wx:if='{{item.status==1}}' data-id='{{item.id}}' data-index='{{index}}' bindtap='upStatus'>下架</view>
          <view wx:if='{{item.status==2}}' data-id='{{item.id}}' data-index='{{index}}' bindtap='upStatus'>上架</view>
          <view wx:if='{{item.status==4}}' data-id='{{item.id}}' data-index='{{index}}' bindtap='upStatus'>上架</view>
        </view>
      </view>
      <view class="del" catchtap="del" data-index="{{index}}" data-id='{{item.id}}'>删除</view>
  </view>
  <view class='st-all'>{{detailList.length}}件商品</view>
</scroll-view>
<view class='st-bottom st-bottom1'>
    <view><navigator url="../addGoods/addGoods">添加商品</navigator></view>
    <view><navigator url="../batch/batch">批量管理</navigator></view>
    <view><navigator url="../batchSet/batchSet">起批设置</navigator></view>
    <view><navigator url="../class/class">本店分类</navigator></view>
</view>