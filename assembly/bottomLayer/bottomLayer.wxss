.modal{
  position: fixed;
  height: 100%;
  width: 100%;
  background: rgba(0, 0, 0, 0.3);
  z-index: 100;
}
.layer-body{
  position: absolute;
  bottom: 0;
  height: 826rpx;
  background: #fff;
  width: 100%;
  display: flex;
  flex-direction: column;
}
.close-img{width: 32rpx;height: 32rpx;}
.close-header{text-align: right;padding: 20rpx 27rpx;}
.title{font-size: 30rpx;font-weight: 600;height: 100rpx;}
.scroll{flex: 1;padding-bottom: 121rpx;}
.sure-btn{width:100%;height: 120rpx;position: absolute;bottom: 0;border-top: 1px solid #ddd;line-height: 120rpx;text-align: center;color: #ca7;font-size: 36rpx;font-weight: 600;}
