/* assembly/layer/layer.wxss */

.modal-back {
  background: rgba(0, 0, 0, 0.3);
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9999;
}
.modal-inner{
  background: #fff;
  border-radius: 10rpx;
  width: 600rpx;
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  padding: 20rpx; 
  z-index: 99999;
}
.modal-close{
  text-align: right;
  width: 50rpx;
  height: 50rpx;
  float: right;
}
.modal-close image{
  width: 30rpx;
  height:30rpx;
}

.modal-title{
  border-bottom: 1rpx solid #ca7;
}